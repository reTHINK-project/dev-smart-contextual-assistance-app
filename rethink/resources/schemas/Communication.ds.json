{
	"$schema": "http://json-schema.org/draft-04/schema#",

	"id": "Communication",
	"type": "object",
	"required": ["startingTime", "lastModified", "status", "resources", "children"],
	"properties": {
		"startingTime": {
			"type": "string",
			"format": "date-time"
		},
		"lastModified": {
			"type": "string",
			"format": "date-time"
		},
		"duration": {
			"type": "string",
			"format": "date-time"
		},
		"status": {
			"enum": [
				"open",
				"pending",
				"closed",
				"paused",
				"failed"
			]
		},
		"participants": {
			"type": "array",
			"items": {
				"$ref": "#/Participant"
			}
		},
		"qos": {
			"$ref": "#/CommunicationQuality"
		},
		"resources": {
			"type": "array",
			"items": {
				"$ref": "HypertyResource.json#/HypertyResource"
			}
		},
		"children": {
			"constant": ["chatmessages"]
		}
	}, 
	"ChatMessages": {
		"type": "object",
		"required": ["parent", "listener", "type"],
		"properties": {
			"parent": {
				"constant": "communication"
			},
			"listener": {
				"constant": "chatmessages"
			},
			"type": {
				"type": "string"
			}
		}
	}, 
	"Participant": {
		"type": "object",
		"properties": {
			"status": {
				"enum": [
				]
			}
		}
	}, 
	"CommunicationQuality": {
		"type": "object",
		"properties": {
		}
	}
}
