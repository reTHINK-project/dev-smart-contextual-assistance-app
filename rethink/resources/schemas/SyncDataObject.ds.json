{
	"$schema": "http://json-schema.org/draft-04/schema#",

	"SyncObject": {
		"type": "object",
		"required": ["url", "reporter", "schema", "name"],
		"anyOf": [
			{ "$ref": "#/SyncObjectParent" },
			{ "$ref": "#/SyncObjectChild" }
		]
		,
		"properties": {
			"url": {
				"type": "string"
			},
			"reporter": {
				"type": "string"
			},
			"schema": {
				"type": "string"
			},
			"name": {
				"type": "string"
			},
			"description": {
				"type": "string"
			},
			"tags": {
				"type": "array",
				"items": {
					"type": "string"
				}
			}
		}
	}, 
	"SyncObjectParent": {
		"type": "object",
		"required": ["children"],
		"properties": {
			"children": {
				"type": "array",
				"items": {
					"type": "string"
				}
			}
		}
	}, 
	"SyncObjectChildren": {
		"type": "object",
		"required": ["parent", "listener", "type"],
		"properties": {
			"parent": {
				"type": "string"
			},
			"listener": {
				"type": "string"
			},
			"type": {
				"$ref": "#/SyncObjectChild"
			},
			"childrenUrls": {
				"type": "array",
				"items": {
					"type": "string"
				}
			}
		}
	}, 
	"SyncObjectChild": {
		"type": "object",
		"properties": {
		}
	}
}
