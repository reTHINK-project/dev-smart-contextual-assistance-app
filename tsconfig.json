{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "es5", "es2016", "es2017", "dom"],
    "noImplicitAny": true,
    "downlevelIteration": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "../node_modules/@types/"
    ]
  },
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts"
  ]
}
